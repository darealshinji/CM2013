#!/bin/bash

pushd `dirname $0`

test -f everything.mak && make -f everything.mak clean
test -f games.mak && make -f games.mak clean

# generated directories
rm -rf ../game/bin/ \
  ../game/mod_episodic/bin/ \
  ../game/mod_episodic/maps/graphs/ \
  ../game/mod_episodic/sound/ \
  ../game/mod_hl2/bin/ \
  ../game/mod_hl2/maps/graphs/ \
  ../game/mod_hl2/sound/ \
  vgui2/vgui_controls/generated_proto/

# files generated by running a mod
rm -f ../game/mod_episodic/GameState.txt \
  ../game/mod_episodic/cfg/config.cfg \
  ../game/mod_episodic/cfg/server_blacklist.txt \
  ../game/mod_episodic/demoheader.tmp \
  ../game/mod_episodic/ep1_gamestats.dat \
  ../game/mod_episodic/glshaders.cfg \
  ../game/mod_episodic/modelsounds.cache \
  ../game/mod_episodic/stats.txt \
  ../game/mod_episodic/videoconfig_linux.cfg \
  ../game/mod_episodic/voice_ban.dt \
  ../game/mod_hl2/GameState.txt \
  ../game/mod_hl2/cfg/config.cfg \
  ../game/mod_hl2/cfg/server_blacklist.txt \
  ../game/mod_hl2/demoheader.tmp \
  ../game/mod_hl2/glshaders.cfg \
  ../game/mod_hl2/modelsounds.cache \
  ../game/mod_hl2/stats.txt \
  ../game/mod_hl2/videoconfig_linux.cfg \
  ../game/mod_hl2/voice_ban.dt

# libraries built from source
rm -f lib/public/linux32/mathlib.a \
  lib/public/linux32/raytrace.a \
  lib/public/linux32/tier1.a \
  lib/public/linux32/vgui_controls.a

# Makefiles
rm -f everything.mak \
  games.mak \
  game/client/client_linux32_episodic.mak \
  game/client/client_linux32_episodic.mak.vpc_crc \
  game/client/client_linux32_episodic.project \
  game/client/client_linux32_hl2.mak \
  game/client/client_linux32_hl2.mak.vpc_crc \
  game/client/client_linux32_hl2.project \
  game/server/server_linux32_episodic.mak \
  game/server/server_linux32_episodic.mak.vpc_crc \
  game/server/server_linux32_episodic.project \
  game/server/server_linux32_hl2.mak \
  game/server/server_linux32_hl2.mak.vpc_crc \
  game/server/server_linux32_hl2.project \
  materialsystem/stdshaders/game_shader_dx9_linux32_episodic.mak \
  materialsystem/stdshaders/game_shader_dx9_linux32_episodic.mak.vpc_crc \
  materialsystem/stdshaders/game_shader_dx9_linux32_episodic.project \
  materialsystem/stdshaders/game_shader_dx9_linux32_hl2.mak \
  materialsystem/stdshaders/game_shader_dx9_linux32_hl2.mak.vpc_crc \
  materialsystem/stdshaders/game_shader_dx9_linux32_hl2.project \
  mathlib/mathlib_linux32.mak \
  mathlib/mathlib_linux32.mak.vpc_crc \
  mathlib/mathlib_linux32.project \
  raytrace/raytrace_linux32.mak \
  raytrace/raytrace_linux32.mak.vpc_crc \
  raytrace/raytrace_linux32.project \
  tier1/tier1_linux32.mak \
  tier1/tier1_linux32.mak.vpc_crc \
  tier1/tier1_linux32.project \
  utils/serverplugin_sample/serverplugin_empty_linux32.mak \
  utils/serverplugin_sample/serverplugin_empty_linux32.mak.vpc_crc \
  utils/serverplugin_sample/serverplugin_empty_linux32.project \
  vgui2/vgui_controls/vgui_controls_linux32.mak \
  vgui2/vgui_controls/vgui_controls_linux32.mak.vpc_crc \
  vgui2/vgui_controls/vgui_controls_linux32.project

popd
